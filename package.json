{
  "name": "markdown-to-confluence",
  "version": "0.0.1",
  "description": "GitHub Action to render a GitHub repository of Markdown content into a Confluence page and series of sub-pages.",
  "main": "dist/main.js",
  "repository": "https://github.com/artis3n/markdown-to-confluence",
  "author": "Artis3n <dev@artis3nal.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "jest --coverage",
    "build": "tsc",
    "dev": "tsc -w",
    "package": "docker build --tag artis3n/markdown-to-confluence .",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "clean": "rm -rf node_modules"
  },
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/github": "^5.0.0",
    "@actions/glob": "^0.2.0",
    "@actions/io": "^1.1.1",
    "@rayzr/markdown2confluence": "^2.0.8",
    "axios": "^0.24.0",
    "axios-curlirize": "^2.0.0",
    "http-status-codes": "^2.2.0"
  },
  "devDependencies": {
    "@types/axios-curlirize": "^1.3.2",
    "@types/jest": "^27.0.3",
    "@types/node": "^17.0.5",
    "jest": "^27.4.5",
    "jest-circus": "^27.4.5",
    "nock": "^13.2.1",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4"
  }
}
